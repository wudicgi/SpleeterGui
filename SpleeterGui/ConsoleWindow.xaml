<Window x:Class="SpleeterGui.ConsoleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i18n="clr-namespace:NGettext.Wpf;assembly=NGettext.Wpf"
        xmlns:local="clr-namespace:SpleeterGui"
        xmlns:util="clr-namespace:SpleeterGui.Util"
        mc:Ignorable="d"
        Title="{i18n:Gettext Console Output}" Width="720" Height="420"
        Closing="Window_Closing"
        WindowStartupLocation="CenterOwner" util:WindowEx.HideIcon="True">
    <Grid>
        <TextBox x:Name="textBoxOutputLines" FontFamily="Consolas"
                 HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Visible" />
    </Grid>
</Window>
